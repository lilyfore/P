@model IEnumerable<P.Models.Project>

@{
    ViewData["Title"] = "My Projects";
}

<h1 class="mb-4">My Projects</h1>

<div class="row">
    @foreach (var project in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title" />
                <div class="card-body">
                    <h5 class="card-title">@project.Title</h5>
                    <p class="card-text">@project.Description</p>
                    <a href="@Url.Action("Details", new { id = project.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
